# GigSmartPay Environment Variables
# Copy this file to .env and fill in your actual values

# ==================== DATABASE ====================
# Supabase PostgreSQL (for production) - Get from https://supabase.com
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=

# ==================== NEO N3 BLOCKCHAIN ====================
NEO_TESTNET_RPC=https://testnet1.neo.coz.io:443

# Neo Wallet Keys - Generate using scripts/generate_wallets.py
DEPLOYER_WIF=
DEPLOYER_ADDR=

AGENT_WIF=
AGENT_ADDR=

CLIENT_WIF=
CLIENT_ADDR=

WORKER_WIF=
WORKER_ADDR=

TREASURY_WIF=
TREASURY_ADDR=

# Smart Contract Hash (deployed vault contract)
VAULT_CONTRACT_HASH=0x2c9090b5eb4639a6c27b0bfeaba4d7680ef89775

# ==================== AI CONFIGURATION ====================
# SpoonAI / SudoApp API Key
OPENAI_API_KEY=
OPENAI_BASE_URL=https://sudoapp.dev/api/v1

# Alternative: Use OpenAI directly
# OPENAI_API_KEY=sk-...
# OPENAI_BASE_URL=https://api.openai.com/v1

# ==================== GOOGLE MAPS ====================
# Get API key from https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=

# ==================== IPFS STORAGE ====================
# 4Everland S3-compatible IPFS - Get from https://4everland.org
EVERLAND_BUCKET_NAME=super-pay
EVERLAND_ACCESS_KEY=
EVERLAND_SECRET_KEY=
EVERLAND_ENDPOINT=https://endpoint.4everland.co/

# ==================== DEVELOPMENT ====================
# Python version (for Render)
PYTHON_VERSION=3.12.0

# FastAPI debug mode
DEBUG=true
